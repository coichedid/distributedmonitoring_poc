{
  "name": "pocnodeservice2",
  "version": "1.0.0",
  "description": "This is a very simple nodejs service with a sayHello rest service method",
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "scripts": {
    "dev": "NODE_ENV=development nodemon -w src -w ../pocnodeservice2/src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0;docker build --no-cache -t pocdistributedmonitoring/pocnodeservice2 .",
    "lint": "eslint src;",
    "start": "node dist/index.js"
  },
  "keywords": [
    "restify",
    "rest",
    "distributed",
    "monitoring",
    "zipkin"
  ],
  "author": "Clovis Chedid",
  "license": "GPL-2.0",
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.1.1",
    "nodemon": "^1.9.2"
  },
  "dependencies": {
    "bunyan": "^1.8.10",
    "bunyan-logstash-tcp": "^1.0.0",
    "config": "^1.26.1",
    "lodash": "^4.17.4",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4",
    "restify": "^4.3.0",
    "zipkin": "^0.7.2",
    "zipkin-instrumentation-request": "^0.7.2",
    "zipkin-instrumentation-restify": "^0.7.2",
    "zipkin-transport-http": "^0.7.2"
  }
}
